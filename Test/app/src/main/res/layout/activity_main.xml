<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Number one"
        android:inputType="number|textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txttwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Number two"
        android:inputType="number|textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtone"
        app:layout_constraintStart_toStartOf="@+id/txtone"
        app:layout_constraintTop_toBottomOf="@+id/txtone" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Answer will show"
        android:inputType="number|textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="190dp"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="@+id/txttwo"
        app:layout_constraintStart_toStartOf="@+id/txttwo"
        app:layout_constraintTop_toBottomOf="@+id/txttwo" />
</androidx.constraintlayout.widget.ConstraintLayout>